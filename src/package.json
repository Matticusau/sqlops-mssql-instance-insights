{
    "name": "mssql-instance-insights",
    "displayName": "MSSQL Instance Insights",
    "description": "Sql Server Instance insights",
    "version": "0.2.0",
    "publisher": "matticusau",
    "license": "MIT",
    "icon": "images/icon.png",
    "author": {
        "email": "matt.lavery@outlook.com",
        "name": "Matt Lavery",
        "url": "http://www.matticus.net"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/matticusau/sqlops-mssql-instance-insights"
    },
    "bugs": {
        "url": "https://github.com/matticusau/sqlops-mssql-instance-insights/issues"
    },
    "engines": {
        "vscode": "^1.22.0",
        "sqlops": "*"
    },
    "categories": [
        "Other"
    ],
    "homepage": "https://github.com/matticusau/sqlops-mssql-instance-insights",
    "contributes": {
        "dashboard.insights": [
            {
                "id": "mssql-instance-waits.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-instance-waits.sql",
                    "type": {
                        "horizontalBar": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "none",
                            "labelFirstColumn": false,
                            "columnsAsLabels": false
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-instance-waits-detail.sql",
                        "label": {
                            "icon": "database",
                            "column": "WaitType",
                            "state": [
                                {
                                    "condition": {
                                        "if": "greaterthan",
                                        "greaterthan": "80"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "greaterthan",
                                        "greaterthan": "40"
                                    },
                                    "color": "orange"
                                },
                                {
                                    "condition": {
                                        "if": "lessthan",
                                        "lessthan": "41"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "Percentage",
                        "actions": null
                    }
                }
            },
            {
                "id": "mssql-instance-xelsystem.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-instance-xelsystem.sql",
                    "type": {
                        "line": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "bottom",
                            "labelFirstColumn": false,
                            "columnsAsLabels": true
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-instance-xelsystem.sql",
                        "label": {
                            "icon": "database",
                            "column": "Event Time",
                            "state": [
                                {
                                    "condition": {
                                        "if": "greaterthan",
                                        "greaterthan": "0"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "0"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "Non Yields Reported",
                        "actions": null
                    }
                }
            },
            {
                "id": "mssql-instance-xelio.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-instance-xelio.sql",
                    "type": {
                        "line": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "bottom",
                            "labelFirstColumn": false,
                            "columnsAsLabels": true
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-instance-xelio.sql",
                        "label": {
                            "icon": "database",
                            "column": "Event Time",
                            "state": [
                                {
                                    "condition": {
                                        "if": "greaterthan",
                                        "greaterthan": "0"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "equals",
                                        "equals": "0"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "Total Long IOs",
                        "actions": null
                    }
                }
            },
            {
                "id": "mssql-instance-xelmemory.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-instance-xelmemory.sql",
                    "type": {
                        "line": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "bottom",
                            "labelFirstColumn": false,
                            "columnsAsLabels": true
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-instance-xelmemory.sql",
                        "label": {
                            "icon": "database",
                            "column": "Event Time",
                            "state": [
                                {
                                    "condition": {
                                        "if": "lessthan",
                                        "lessthan": "4"
                                    },
                                    "color": "orange"
                                },
                                {
                                    "condition": {
                                        "if": "greaterthan",
                                        "greaterthan": "4"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "Available Physical Memory (GB)",
                        "actions": null
                    }
                }
            },
            {
                "id": "mssql-instance-vlfs.insight",
                "contrib": {
                    "queryFile": "./sql/mssql-instance-vlfs.sql",
                    "type": {
                        "bar": {
                            "dataDirection": "vertical",
                            "dataType": "number",
                            "legendPosition": "none",
                            "labelFirstColumn": false,
                            "columnsAsLabels": false
                        }
                    },
                    "details": {
                        "queryFile": "./sql/mssql-instance-vlfs-detail.sql",
                        "label": {
                            "icon": "database",
                            "column": "DBName",
                            "state": [
                                {
                                    "condition": {
                                        "if": "greaterthan",
                                        "greaterthan": "10000"
                                    },
                                    "color": "red"
                                },
                                {
                                    "condition": {
                                        "if": "greaterthan",
                                        "greaterthan": "1000"
                                    },
                                    "color": "orange"
                                },
                                {
                                    "condition": {
                                        "if": "lessthan",
                                        "lessthan": "999"
                                    },
                                    "color": "green"
                                }
                            ]
                        },
                        "value": "TotalVLFs",
                        "actions": null
                    }
                }
            }
        ]
        ,
        "dashboard.tabs": [
            {
                "id": "mssql-instance-insights.tab",
                "title": "MSSQL Instance Insights",
                "description": "SQL Server Instance insights and widgets",
                "container": {
                    "widgets-container": [
                        {
                            "name": "Top 10 Waits",
                            "gridItemConfig": {
                                "sizex": 2,
                                "sizey": 1
                            },
                            "widget": {
                                "mssql-instance-waits.insight": {}
                            }
                        },
                        {
                            "name": "Virtual Log Files (VLFs)",
                            "gridItemConfig": {
                                "sizex": 2,
                                "sizey": 1
                            },
                            "widget": {
                                "mssql-instance-vlfs.insight": {}
                            }
                        },
                        {
                            "name": "XEL System Stats",
                            "gridItemConfig": {
                                "sizex": 2,
                                "sizey": 2
                            },
                            "widget": {
                                "mssql-instance-xelsystem.insight": {}
                            }
                        },
                        {
                            "name": "XEL IO Stats",
                            "gridItemConfig": {
                                "sizex": 2,
                                "sizey": 2
                            },
                            "widget": {
                                "mssql-instance-xelio.insight": {}
                            }
                        },
                        {
                            "name": "XEL Memory Stats",
                            "gridItemConfig": {
                                "sizex": 2,
                                "sizey": 2
                            },
                            "widget": {
                                "mssql-instance-xelmemory.insight": {}
                            }
                        }
                    ]
                }
            }
        ]
    }
}